{% extends 'base.html.twig' %}

{% block title %}{{ user.prenom }} {{ user.nom }}{% endblock %}

{% block body %}
    <h1>{{ user.prenom }} {{ user.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'tab.email'|trans({}, 'commons') }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ 'tab.role'|trans({}, 'commons') }}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">{{ 'btn.back'|trans({}, 'commons') }}</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">{{ 'btn.edit'|trans({}, 'commons') }}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
