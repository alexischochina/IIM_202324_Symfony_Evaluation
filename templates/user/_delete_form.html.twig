{% trans_default_domain 'user' %}
<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm({{ 'delete'|trans }});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn">{{ 'btn.delete'|trans({}, 'commons') }}</button>
</form>
