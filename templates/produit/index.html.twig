{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>
    <nav>
        <ul>
            <li>
                <a href="{{ path('app_contenu_panier_index') }}">Panier</a>
                <a href="{{ path('app_register') }}">Register</a>
                <a href="{{ path('app_login') }}">Login</a>
            </li>
        </ul>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.Description }}</td>
                <td>{{ produit.prix }}â‚¬</td>
                <td>{{ produit.stock }}</td>
                <td><img src="{{asset('uploads/' ~ produit.Photo)}}" alt="logo du produit" width="100px" height="100px">
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
